    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.vhytron.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.vhytron.ui.slideshow.SlideshowFragment"
